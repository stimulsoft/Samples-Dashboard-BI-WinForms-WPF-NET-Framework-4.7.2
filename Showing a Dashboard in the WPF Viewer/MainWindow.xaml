<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Showing_a_Dashboard_in_the_WPF_Viewer"
        xmlns:Wpf="clr-namespace:Stimulsoft.Dashboard.Viewer.Wpf;assembly=Stimulsoft.Dashboard.Viewer.Wpf" x:Class="Showing_a_Dashboard_in_the_WPF_Viewer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>

        <Wpf:StiWpfDashboardViewerControl Name="ViewerControl" HorizontalAlignment="Stretch" Height="Auto" Margin="10,45,10,10.5" VerticalAlignment="Stretch" Width="Auto" BorderThickness="1" BorderBrush="LightGray"/>
        <Button Content="Show Viewer Dialog" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Height="30" Click="Button_Click_Dialog"/>
        <Button Content="Show Viewer in the Panel" Margin="175,10,0,0" Click="Button_Click_Panel" HorizontalAlignment="Left" Width="160" Height="30" VerticalAlignment="Top"/>

    </Grid>
</Window>
